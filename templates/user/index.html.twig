{% extends 'base.html.twig' %}

{% block title %}Esprit sceptique - Gestion des utilisateurs
{% endblock %}

{% block body %}
	<section>
		<div class="container">
			<div class="row">
				<div class="card mt-3 p-3 mb-3 shadow">
					<div class="card-body">
						<h2 class="mt-3 pb-3">Utilisateur</h2>
						{{form_start(form)}}
						{{form_row(form.email)}}
						{{form_row(form.pseudo)}}
						{{form_row(form.adfi)}}
						{{form_row(form.role, {value: role})}}
						<a href="/admin#user" class="btn btn-danger">
							Retour</a>
						<button type="submit" class="btn btn-dark">Valider</button>
						{{form_end(form)}}
					</div>
				</div>
			</div>
		</section>
	{% endblock %}
