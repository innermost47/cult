{% extends 'base.html.twig' %}

{% block title %}Esprit sceptique - Modifier mon mot de passe
{% endblock %}

{% block body %}
	<section class="form-admin">
		<div class="container">
			<div class="card mt-3 p-3">
				<div class="card-body">
					<h2 class="mt-3 pb-3">Modifier mon mot de passe</h2>
					{{form_start(form)}}
					{{form_widget(form)}}
					<a href="/admin" class="btn btn-danger">
						Retour</a>
					<button type="submit" class="btn btn-dark">Valider</button>
					{{form_end(form)}}
					{% for message in app.flashes('error') %}
						<div class="alert alert-danger">
							{{ message }}
						</div>
					{% endfor %}
				</div>
			</div>

		</div>
	</section>
{% endblock %}
