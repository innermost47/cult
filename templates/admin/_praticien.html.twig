<section id="praticien">
	<div class="container">
		<div class="card mt-3 p-3 shadow">
			<h2 class="mt-3 pb-3">Praticiens
				<a href="{{ path('praticien_add') }}">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="black" class="bi bi-plus-circle" viewbox="0 0 16 16">
						<path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
						<path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
					</svg>
				</a>
			</h2>
			<div class="card-body table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Nom</th>
							<th scope="col">Pr√©nom</th>
							<th scope="col">Signalements</th>
							<th scope="col">Techniques</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>

						{% for praticien in praticiens| reverse %}
							<tr>
								<td>{{praticien.id}}</td>
								<td>{{praticien.lastName}}</td>
								<td>{{praticien.firstName}}</td>
								<td>{{praticien.reportings|length}}</td>
								<td>
									{% for technique in praticien.techniques %}
										{{technique.name}},
									{% endfor %}
								</td>
								<td>
									<a href="{{path('praticien_update', {'slug': praticien.slug})}}">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-pen-fill" viewbox="0 0 16 16">
											<path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/>
										</svg>
									</a>
									<a href="{{path('praticien_show', {'slug': praticien.slug})}}">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-eye-fill" viewbox="0 0 16 16">
											<path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
											<path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
										</svg>
									</a>
									<a data-bs-toggle="modal" data-bs-target="#modalDeletePraticien{{praticien.id}}" data-bs-whatever="@mdo" class="pointer">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-trash-fill" viewbox="0 0 16 16">
											<path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
										</svg>
									</a>
								</td>
							</tr>
							<!-- DELETE MODAL -->
							<div class="modal fade" id="modalDeletePraticien{{praticien.id}}" tabindex="-1" attr.aria-labelledby="modalDeletePraticienLabel{{praticien.id}}" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="modalDeletePraticienLabel{{praticien.id}}">
												Suppression
											</h5>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										<div class="modal-body">
											<p>Confirmez vous la suppression de ce praticien ?</p>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
												Annuler
											</button>
											<a href="{{path('praticien_delete', {id: praticien.id})}}" class="btn btn-danger">Valider</a>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>
