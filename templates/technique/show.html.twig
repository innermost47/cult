{% extends 'base.html.twig' %}

{% block title %}Esprit sceptique -
	{{technique.name}}
{% endblock %}

{% block body %}

	<section>
		<div class="container">
			<div class="card mt-3 shadow mb-3">
				<div class="card-image-container">
					<img src="{{asset('images/')}}{{technique.image}}" class="card-image-top rounded" alt="image">
				</div>
				<div class="card-body">
					<h5 class="card-title">
						<a href="{{technique.link}}" target="_blank">
							<svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="black" class="bi bi-link-45deg" viewbox="0 0 16 16">
								<path d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.002 1.002 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z"/>
								<path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243L6.586 4.672z"/>
							</svg>
						</a>
						{{technique.name}}</h5>
					<hr>
					<p class="card-text">
						{{technique.description | raw}}
					</p>
					{% if is_granted("IS_AUTHENTICATED_FULLY")%}
						{% if technique.praticiens | length > 0 %}
							<p class="mb-2">
								<strong>Praticiens :</strong>
								<ul class="list-group shadow-sm">
									{% for praticien in technique.praticiens %}
										<li class="list-group-item">
											<a href="/praticien/{{praticien.slug}}">{{praticien.firstname}}
												{{praticien.lastname}}</a>
										</li>
									{% endfor %}
								</ul>
							</p>
						{% endif %}
						{% if technique.groups  | length > 0 %}
							<p class="mb-2">
								<strong>Groupes :</strong>
								<ul class="list-group shadow-sm">
									{% for group in technique.groups %}
										<li class="list-group-item">
											<a href="/group/{{group.slug}}">{{group.name}}</a>
										</li>
									{% endfor %}
								</ul>
							</p>
						{% endif %}
					{% endif %}
				</div>
			</div>

		</div>
	</section>

{% endblock %}
